@{
    Layout = "_LayoutGeoHeat";
    ViewData["Title"] = "GeoHeat";
}

@section Styles {
    <link rel="stylesheet" href="~/css/geoheat.css" />
}

@section Scripts {
    <!-- ПЪЛЕН D3 (UMD), прави window.d3 -->
    <script src="https://cdn.jsdelivr.net/npm/d3@7"></script>

    <!-- Globe.gl, чете от window.THREE / window.d3 -->
    <script src="https://cdn.jsdelivr.net/npm/globe.gl"></script>

    <!-- Твоят game script -->
    <script src="~/js/geoheat.js"></script>
}

<div class="geoheat-page">
    <div class="geoheat-inner">
        <h1 class="geoheat-title">GeoHeat — Guess the Country</h1>

        <div id="globeContainer" class="geoheat-globe"></div>

        <div class="geoheat-controls">
            <div class="geoheat-input-row">
                <input id="countryInput" type="text" placeholder="Enter country name..." autocomplete="off" />
                <button id="guessBtn">GUESS</button>
            </div>

            <div id="message" class="geoheat-message"></div>
            <div id="guessList" class="geoheat-guess-list"></div>
        </div>
    </div>
</div>
